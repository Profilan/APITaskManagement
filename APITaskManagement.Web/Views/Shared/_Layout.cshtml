<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - API Task Manager</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("API Task Manager", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
                    <li>@Html.ActionLink("Queue", "Index", "Queue")</li>
                    <li>@Html.ActionLink("Reports", "Index", "Report")</li>
                    <li>@Html.ActionLink("System Log", "Index", "Log")</li>

                </ul>
                <ul class="nav navbar-nav navbar-right">

                    <li>@Html.ActionLink("Tasks", "Index", "Task")</li>
                    <li>@Html.ActionLink("Urls", "Index", "Url")</li>
                    <li>@Html.ActionLink("Shares", "Index", "Share")</li>
                    <li>@Html.ActionLink("Monitors", "Index", "Monitor")</li>
                    <li>@Html.ActionLink("Messengers", "Index", "Messenger")</li>

                    <li class="disabled"><a href="#">Hello, @User.Identity.Name!</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
