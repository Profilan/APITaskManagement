@{
    ViewBag.Title = "Tasks";
}

<h2>Tasks</h2>

<div class="row">
    <div class="col-md-12">
        @Html.ActionLink("New", "Create", null, new { @class = "btn btn-primary btn-sm" })
    </div>
</div>

<hr>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Title</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

    </tbody>
</table>